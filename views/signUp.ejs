<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up</title>
  <style>
   
   #obt {
      background: linear-gradient(90deg, #6366f1 0%, #a5b4fc 100%);
      color: #fff;
      border: none;
      border-radius: 0.75rem;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      font-weight: 600;
      box-shadow: 0 4px 14px 0 rgba(99,102,241,0.15);
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
      margin-top: 1rem;
    }
    #obt:hover, #obt:focus {
      background: linear-gradient(90deg, #4f46e5 0%, #818cf8 100%);
      transform: translateY(-2px) scale(1.03);
      outline: none;
    }



    #vbt, #iotp {
      display: none;
    }

  
    #vbt {
      background: linear-gradient(90deg, #6366f1 0%, #a5b4fc 100%);
      color: #fff;
      border: none;
      border-radius: 0.75rem;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      font-weight: 600;
      box-shadow: 0 4px 14px 0 rgba(99,102,241,0.15);
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
      margin-top: 1rem;
    }
    #vbt:hover, #vbt:focus {
      background: linear-gradient(90deg, #4f46e5 0%, #818cf8 100%);
      transform: translateY(-2px) scale(1.03);
      outline: none;
    }

    #iotp {
      display: none;
      width: 100%;
      padding: 0.75rem 1rem;
      border: 1.5px solid #a5b4fc;
      border-radius: 0.75rem;
      font-size: 1rem;
      margin-top: 1rem;
      background: #f8fafc;
      color: #3730a3;
      box-shadow: 0 2px 8px 0 rgba(99,102,241,0.07);
      transition: border 0.2s, box-shadow 0.2s;
    }
    #iotp:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 2px #6366f155;
      outline: none;
    }
  </style>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-indigo-200 via-blue-100 to-purple-200 min-h-screen flex flex-col relative overflow-x-hidden">
  <div class="absolute inset-0 pointer-events-none z-0">
    <div class="absolute top-0 left-0 w-72 h-72 bg-blue-300 opacity-30 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-purple-300 opacity-30 rounded-full blur-3xl animate-pulse"></div>
  </div>
  <%- include('../partials/nav') %>
  <div class="flex flex-1 items-center justify-center py-16 px-4 sm:px-6 lg:px-8 z-10 relative">
    <div class="max-w-lg w-full bg-white/95 rounded-3xl shadow-2xl p-12 border border-blue-100 backdrop-blur-md transition-all duration-300 hover:shadow-3xl hover:scale-105">
      <div class="flex flex-col items-center mb-10">
        <div class="bg-gradient-to-tr from-blue-400 to-indigo-500 rounded-full p-4 shadow-xl mb-5 animate-bounce">
          <svg class="h-12 w-12 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h2 class="text-4xl font-extrabold text-gray-900 tracking-tight text-center drop-shadow-lg">Create your account</h2>
        <p class="mt-3 text-lg text-gray-500 text-center">Join us and start your journey!</p>
      </div>
      <form class="space-y-7" action="/signup" method="POST" autocomplete="off">
        <div class="grid grid-cols-1 gap-5">
          <div class="relative">
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-1">Full Name</label>
            <input id="name" name="name" type="text" autocomplete="name" required
              class="peer rounded-xl block w-full px-5 py-3 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              placeholder="Your Name" value="<%=(obj)?obj.name:''%>">
            <span class="absolute right-3 top-10 text-blue-400 opacity-0 peer-focus:opacity-100 transition-opacity duration-200">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
              </svg>
            </span>
          </div>
          <div class="relative">
            <label for="username" class="block text-sm font-semibold text-gray-700 mb-1">User Name</label>
            <input id="username" name="username" type="text" autocomplete="username" required
              class="peer rounded-xl block w-full px-5 py-3 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              placeholder="Your User Name" value="<%=(obj)?obj.username:''%>">
            <span class="absolute right-3 top-10 text-blue-400 opacity-0 peer-focus:opacity-100 transition-opacity duration-200">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
              </svg>
            </span>
          </div>
          <div class="relative">
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-1">Email address</label>
            <input id="email" name="email" type="email" autocomplete="email" required
              class="peer rounded-xl block w-full px-5 py-3 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              placeholder="you@example.com" value="<%=(obj)?obj.email:''%>">
            <span class="absolute right-3 top-10 text-blue-400 opacity-0 peer-focus:opacity-100 transition-opacity duration-200">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
              </svg>
            </span>
          </div>
          <div class="relative">
            <button id="obt" type="button"
              class="rounded-xl block w-full px-4 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              onclick="getOTP()">Get OTP</button>
            <input type="text" name="otp" id="iotp"  class=" rounded-xl block w-full px-5 py-3 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80" placeholder="Enter OTP">
            <button id="vbt" type="button"
              class=" rounded-xl block w-full px-4 py-2 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              onclick="verify()">Verify</button>
            <span class="absolute right-3 top-10 text-blue-400 opacity-0 peer-focus:opacity-100 transition-opacity duration-200">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
              </svg>
            </span>
          </div>
          <div class="relative">
            <label for="password" class="block text-sm font-semibold text-gray-700 mb-1">Password</label>
            <input id="password" name="password" type="password" autocomplete="new-password" required
              class="peer rounded-xl block w-full px-5 py-3 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              placeholder="Password" value="<%=(obj)?obj.password:''%>">
            <span class="absolute right-3 top-10 text-blue-400 opacity-0 peer-focus:opacity-100 transition-opacity duration-200">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
              </svg>
            </span>
          </div>
          <div class="relative">
            <label for="confirm_password" class="block text-sm font-semibold text-gray-700 mb-1">Confirm Password</label>
            <input id="confirm_password" name="confirm_password" type="password" autocomplete="new-password" required
              class="peer rounded-xl block w-full px-5 py-3 border border-gray-300 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400 transition sm:text-base shadow-md bg-white/80"
              placeholder="Confirm Password">
            <span class="absolute right-3 top-10 text-blue-400 opacity-0 peer-focus:opacity-100 transition-opacity duration-200">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
              </svg>
            </span>
          </div>
        <div class="relative flex items-center gap-6 mt-2">
          <span class="block text-sm font-semibold text-gray-700 mb-1">Register as:</span>
          <label class="inline-flex items-center">
            <input type="radio" class="form-radio text-blue-600" name="type" value="guest" required>
            <span class="ml-2 text-gray-700">Guest</span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" class="form-radio text-indigo-600" name="type" value="host" required>
            <span class="ml-2 text-gray-700">Host</span>
          </label>
        </div>
        </div>
        <div class="flex items-center mt-2">
          <input id="terms" name="terms" type="checkbox" required class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded transition duration-200">
          <label for="terms" class="ml-2 block text-sm text-gray-700">
            I agree to all <a href="/terms" class="text-blue-600 hover:underline font-medium">Terms &amp; Conditions</a>
          </label>
        </div>
        <button type="submit"
          class="mt-7 w-full py-3 px-4 bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white font-bold rounded-2xl shadow-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 text-lg flex items-center justify-center gap-2 group">
          <span class="flex items-center gap-2">
            <svg class="h-6 w-6 text-white group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
            </svg>
            Sign Up
          </span>
        </button>
      </form>
      <div class="mt-10 text-center text-base text-gray-600">
        <span>Already have an account?</span>
        <a href="/signin" class="font-semibold text-blue-600 hover:text-indigo-500 transition underline ml-1">Sign in</a>
      </div>
    </div>
    <% if (array && array.length) { %>
      <div class="mt-8 mb-4 text-center">
        <ul class="inline-block text-left">
          <% array.forEach(function(error) { %>
            <li class="text-red-600 font-semibold mb-1 flex items-center gap-2">
              <svg class="h-5 w-5 text-red-500 inline" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01"/>
              </svg>
              <span><%= error %></span>
            </li>
          <% }); %>
        </ul>
      </div>
    <% } %>
  </div>
  <script>

async function getOTP(){
console.log("getOtp");
const vemail=document.getElementById('email').value;
const obt=document.getElementById('obt');
const iotp=document.getElementById('iotp');
const vbt=document.getElementById('vbt');


const res=await fetch('/getotp',{
  method:'POST',
  headers:{ "Content-Type": "application/json"},
  body:JSON.stringify({ vemail: vemail })
}
)
const message = await res.json();
if(message.msg=="ok"){
console.log("OTP has been sent to Your Email");

obt.style.display='none';
iotp.style.display='block';
vbt.style.display='block';
}
else{
  console.log("invalid Email");


}
}

async function verify(){
console.log("verifyOtp");
const iotp=document.getElementById('iotp');
let vbt=document.getElementById('vbt');
const otp=iotp.value;
const res=await fetch('/verifyotp',{
  method:"POST",
  headers:{ "Content-Type": "application/json"},
  body:JSON.stringify({ otp: otp })  
})
const data=await res.json();
if(data.msg=="OTP Verified")
{
console.log("OTP Verified Successfully");
iotp.style.display="none";
vbt.innerText="Verified";
vbt.style.background = "linear-gradient(90deg, #16a34a, #22c55e)";
vbt.style.color = "#fff";

}
else{
  console.log("OTP Incorrect ‚ùå");
  
}


vbt=null;





}


  </script>
</body>
</html>
